{
  "name": "@a16njs/glob-hook",
  "version": "0.1.0",
  "description": "CLI tool for glob-based file path matching in Claude Code hooks",
  "license": "AGPL-3.0",
  "author": "Texarkanine",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Texarkanine/a16n.git",
    "directory": "packages/glob-hook"
  },
  "homepage": "https://github.com/Texarkanine/a16n#readme",
  "bugs": {
    "url": "https://github.com/Texarkanine/a16n/issues"
  },
  "keywords": [
    "a16n",
    "glob",
    "hook",
    "claude",
    "cli"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "glob-hook": "./dist/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist *.tsbuildinfo",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "micromatch": "^4.0.8"
  },
  "devDependencies": {
    "@types/micromatch": "^4.0.9",
    "@types/node": "^20.0.0",
    "typescript": "^5.4.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
